{
    "name": "slack-in-your-time",
    "version": "0.0.1",
    "description": "A Slack application for a global team",
    "author": "Hoon Kim",
    "scripts": {
        "test": "NODE_ENV=test jest --verbose --coverage && eslint '*/**/*.{js,ts}'",
        "start": "node index.js",
        "build": "rimraf ./dist && tsc --project tsconfig.json",
        "dev": "NODE_ENV=development ts-node-dev -r dotenv/config src/index.ts",
        "lint": "eslint '*/**/*.{js,ts}' --quiet --fix",
        "deploy": "yarn run build && ts-node-dev -r dotenv/config scripts/deploy.ts",
        "sandbox": "ts-node-dev -r dotenv/config scripts/sandbox.ts"
    },
    "keywords": [
        "slack-app",
        "bolt",
        "remote-working",
        "time-zone"
    ],
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^26.0.15",
        "@types/lodash": "^4.14.162",
        "@types/node": "^14.14.5",
        "@types/node-fetch": "^2.5.7",
        "@typescript-eslint/eslint-plugin": "^4.6.0",
        "@typescript-eslint/parser": "^4.6.0",
        "@vercel/ncc": "^0.24.1",
        "dotenv": "^8.2.0",
        "eslint": "^7.12.1",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.1.4",
        "glitch-deploy-tool": "^0.1.3-alpha",
        "jest": "^26.6.1",
        "jest-config": "^26.6.1",
        "prettier": "^2.1.2",
        "rimraf": "^3.0.2",
        "sync-glitch-cli": "^2.0.1",
        "ts-jest": "^26.4.3",
        "ts-node": "^9.0.0",
        "ts-node-dev": "^1.0.0-pre.63",
        "typescript": "^4.0.5"
    },
    "dependencies": {
        "@slack/bolt": "^2.4.1",
        "@slack/web-api": "^5.13.0",
        "axios": "^0.21.0",
        "chrono-node": "^2.1.9",
        "lodash": "^4.17.20",
        "moment-timezone": "^0.5.31",
        "node": "^15.0.1",
        "reflect-metadata": "^0.1.13"
    },
    "engines": {
        "node": ">=12.x"
    },
    "standard": {
        "parser": "@typescript-eslint/parser",
        "env": [
            "jest"
        ],
        "plugins": [
            "typescript"
        ]
    },
    "jest": {
        "testEnvironment": "node"
    },
    "private": true
}
